@using APS.BusinessEntity.Models.Authentication;
@model AuthenticationModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/base/favicon.ico">
    <title>Login | Trinity</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/glyphicons.css" rel="stylesheet">
    <link href="/css/open-iconic-bootstrap.css" rel="stylesheet">
    <link href="/css/login-style.css" rel="stylesheet">
    <link href="/css/custom-style.css" rel="stylesheet">
</head>
<body class="is-bg">
    <!-- Page Content -->
    <div class="page-content">
        <div class="container">
            <div class="login d-flex justify-content-center align-items-stretch">
                <div class="align-self-center full-width">
                    <div class="box login ">
                        <div class="row justify-content-sm-center row-eq-height">
                            <div class="col-12 col-sm-5 login-left">
                                <div class="content">
                                    <div class="login-logo">
                                        <img src="/img/base/logo-trinity.png" alt="Trinity" />
                                    </div>
                                    <div class="login-title">
                                        <h5 class="title">
                                            Appointment Scheduling System
                                        </h5>
                                    </div>
                                    <div class="login-remark">
                                        <p class="login-copyright">
                                            Copyright &copy; 2018 Central Narcotics <br />
                                            Bureau (CNB). All Rights Reserved.
                                        </p>
                                        <p class="login-privacy-terms">
                                            <a href="https://www.cnb.gov.sg/privacy-statement" class="login-privacy btn-underline">Privacy Policy</a> | <a href="https://www.cnb.gov.sg/terms-of-use" class="login-terms btn-underline">Term of Use</a>
                                        </p>
                                    </div>
                                </div>

                            </div>
                            <div class="col-12 col-sm-7 login-right">
                                <div class="content">
                                    <div class="form-group text-danger">
                                        @ViewBag.ErrorMessage
                                    </div>
                                    @using (Html.BeginForm("AuthenticateAPS", "APS", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        <div class="login-form">
                                            <form>
                                                <h3 class="form-title">Login</h3>
                                                <div class="form-group">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input" placeholder="User ID" />*@
                                                        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User ID", @class = "form-control modern-input" })
                                                        <span class="input-group-addon">
                                                            <span class="addon-icon oi oi-person icon-fixed-width color-blue" title="person" aria-hidden="true"></span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.UserName, "", new { })</span>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input" placeholder="Password" />*@
                                                        @Html.PasswordFor(m => m.UserPassword, new { placeholder = "Password", @class = "form-control modern-input" })
                                                        <span class="input-group-addon">
                                                            <span class="addon-icon oi oi-lock-locked icon-fixed-width color-blue"></span>
                                                        </span>
                                                        <span class="error-text">@Html.ValidationMessageFor(m => m.UserPassword, "", new { })</span>
                                                    </div>
                                                </div>
                                                <a href="~/APS/APSForgetPassword" class="small">
                                                    Forgot Password?
                                                </a>
                                                <p><br /></p>
                                                <!-- <button type="button" class="btn btn-primary btn-block">LOGIN</button> -->
                                                @*<a href="message.html" class="btn btn-primary btn-block">LOGIN</a>*@
                                                <input type="submit" value="LOGIN" class="btn btn-primary btn-block" />
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/tether.js"></script>
    <script>
        window.Tether = {};
    </script>
    <script src="/js/bootstrap.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
