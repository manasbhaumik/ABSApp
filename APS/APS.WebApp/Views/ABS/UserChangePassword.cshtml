@using APS.BusinessEntity.Models.Authentication;
@model ChangePasswordBindingModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/base/favicon.ico">
    <title>Change Password | Trinity</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/glyphicons.css" rel="stylesheet">
    <link href="/css/open-iconic-bootstrap.css" rel="stylesheet">
    <link href="/css/change-password-style.css" rel="stylesheet">
    <link href="/css/custom-style.css" rel="stylesheet">
</head>
<body class="is-bg">
    <!-- Page Content -->
    <div class="page-content ">
        <div class="container">
            @using (Html.BeginForm("ChangePasswordAfterLogin", "ABS", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="change-password d-flex justify-content-center align-items-stretch">
                    <div class="align-self-center full-width">
                        <div class="box change-password ">
                            <div class="row justify-content-sm-center row-eq-height">
                                <div class="col">
                                    <div class="content">
                                        <div class="change-password-form">
                                            <form>
                                                <h3 class="form-title">Change of Password</h3>
                                                <p class="form-subtitle small">Please change password to proceed. You are required to fill up all the fields.</p>
                                                <div class="form-group">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="New Password" />*@
                                                        @Html.PasswordFor(m => m.OldPassword, new { placeholder = "Old Password", @class = "form-control modern-input col-7" })

                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Old Password</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.OldPassword, "", new { })</span>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="Confirm New Password" />*@
                                                        @Html.PasswordFor(m => m.NewPassword, new { placeholder = "New Password", @class = "form-control modern-input col-7" })

                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">New Password</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.NewPassword, "", new { })</span>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="Confirm New Password" />*@
                                                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm New Password", @class = "form-control modern-input col-7" })

                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Confirm New Password</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { })</span>
                                                </div>
                                                <p><br /></p>
                                                <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                                                <a href="@Url.Action("ViewMessages", "Appointment", new { Area = "Appointment" })" class="btn btn-primary btn-block">CANCEL</a>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            }
        </div>
        <!-- /.container -->
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/tether.js"></script>
    <script>
        window.Tether = {};
    </script>
    <script src="/js/bootstrap.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
