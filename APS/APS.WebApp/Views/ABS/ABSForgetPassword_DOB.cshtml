@using APS.BusinessEntity.Models.Authentication;
@model ForgetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/base/favicon.ico">
    <title>Forget Password - Birth Date | Trinity</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/glyphicons.css" rel="stylesheet">
    <link href="/css/open-iconic-bootstrap.css" rel="stylesheet">
    <link href="/css/forget-password-style.css" rel="stylesheet">
    <link href="/css/custom-style.css" rel="stylesheet">
</head>
<body class="is-bg">
    <!-- Page Content -->
    <div class="page-content ">
        <div class="container">
            <div class="forget-password d-flex justify-content-center align-items-stretch">
                <div class="align-self-center full-width">
                    <div class="box forget-password ">
                        <div class="row justify-content-sm-center row-eq-height">
                            <div class="col">
                                @using (Html.BeginForm("ABSForgetPassword_DOB", "ABS", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    <div class="content">
                                        <div class="form-group text-danger">
                                            @ViewBag.ErrorMessage
                                        </div>
                                        <div class="forget-password-form">
                                            <form>
                                                <h3 class="form-title">Forget Password</h3>
                                                You have exceed your number of tries to reset your password
                                                <div class="form-group">
                                                    <div class="input-group modern-input-group is-required">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="DD/MM/YYYY" />*@
                                                        @Html.TextBoxFor(m => m.DateOfBirth, new { placeholder = "DD/MM/YYYY", @class = "form-control modern-input col-7" })
                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Date of Birth</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text"> @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })</span>
                                                </div>
                                                <p><br /></p>
                                                <div class="row">
                                                    <div class="col">
                                                        <!-- <button type="button" class="btn btn-empty btn-block">CANCEL</button> -->
                                                        <a href="@Url.Action("ABSLogin", "ABS", new { Area = "ABS" })" class="btn btn-empty b class="btn btn-empty btn-block">CANCEL</a>
                                                    </div>
                                                    <div class="col">
                                                        <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- Modal -->
    @*<div class="modal fade modal-notification" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="notificationModalLabel" aria-hidden="true">
            <div class="d-flex full-height">
                <div class="modal-dialog modal-md align-self-center" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="notificationModalLabel">Successfully Reset Password</h5>
                        </div>
                        <div class="modal-body">
                            <p>Please check your email or sms for your new password.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary btn-block" data-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/tether.js"></script>
    <script>
        window.Tether = {};
    </script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
