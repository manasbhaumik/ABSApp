@using APS.BusinessEntity.Models.Authentication;
@model ChangePasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/base/favicon.ico">
    <title>Change Password | Trinity</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/glyphicons.css" rel="stylesheet">
    <link href="/css/open-iconic-bootstrap.css" rel="stylesheet">
    <link href="/css/change-password-style.css" rel="stylesheet">
    <link href="/css/custom-style.css" rel="stylesheet">
</head>
<body class="is-bg">
    <!-- Page Content -->
    <div class="page-content ">
        <div class="container">
            @using (Html.BeginForm("APSChangePassword", "APS", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="change-password d-flex justify-content-center align-items-stretch">
                    <div class="align-self-center full-width">
                        <div class="box change-password ">
                            <div class="row justify-content-sm-center row-eq-height">
                                <div class="col">
                                    <div class="content">
                                        <div class="change-password-form">
                                            <form>
                                                <h3 class="form-title">Change of Password</h3>
                                                <p class="form-subtitle small">Please change password to proceed. You are required to fill up all the fields.</p>
                                                <div class="form-group">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="New Password" />*@
                                                        @Html.PasswordFor(m => m.UserPassword, new { placeholder = "New Password", @class = "form-control modern-input col-7" })
                                                        @*@Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })*@
                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">New Password</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.UserPassword, "", new { })</span>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="Confirm New Password" />*@
                                                        @Html.PasswordFor(m => m.ReTypeUserPassword, new { placeholder = "Confirm New Password", @class = "form-control modern-input col-7" })
                                                        @*@Html.ValidationMessageFor(m => m.ReTypeUserPassword, "", new { @class = "text-danger" })*@
                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Confirm New Password</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.ReTypeUserPassword, "", new { })</span>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<select class="form-control modern-input col-7" title="Question">
                <option vlaue="1">Who is your favourite teacher in primary school?</option>
                <option vlaue="2">In what city or town did your mother and father meet?</option>
                <option vlaue="3">What is your favorite movie?</option>
                <option vlaue="4">What was your childhood nickname?</option>
                <option vlaue="5">What is the name of your favorite childhood friend?</option>
                <option vlaue="6">What was the make and model of your first car?</option>
            </select>*@
                                                        @Html.DropDownListFor(m => m.PasswordQuestion,
                                                                new SelectList(new List<SelectListItem> {
                                                                new SelectListItem { Text = "Who is your favourite teacher in primary school?", Value = "1"},
                                                                new SelectListItem { Text = "In what city or town did your mother and father meet", Value = "2"},
                                                                new SelectListItem { Text = "What is your favorite movie?", Value = "3"},
                                                                new SelectListItem { Text = "What was your childhood nickname?", Value = "4"},
                                                                new SelectListItem { Text = "What is the name of your favorite childhood friend?", Value = "5"},
                                                                new SelectListItem { Text = "What was the make and model of your first car?", Value = "6"}
                                                                    }, "Value", "Text"),
                                                                    new { @class = "form-control modern-input col-7" })
                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Question</span>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="form-group ">
                                                    <div class="input-group modern-input-group is-required is-error">
                                                        @*<input type="text" class="form-control modern-input col-7" placeholder="Your Answer" />*@
                                                        @Html.TextBoxFor(m => m.PasswordQuesAnswer, new { placeholder = "Your Answer", @class = "form-control modern-input col-7" })
                                                        @*@Html.ValidationMessageFor(m => m.PasswordQuesAnswer, "", new { @class = "text-danger" })*@
                                                        <span class="input-group-addon col-5">
                                                            <span class="addon-text">Your Answer</span>
                                                        </span>
                                                    </div>
                                                    <span class="error-text">@Html.ValidationMessageFor(m => m.PasswordQuesAnswer, "", new { })</span>
                                                </div>
                                                <p><br /></p>
                                                <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            }
        </div>
        <!-- /.container -->
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/tether.js"></script>
    <script>
        window.Tether = {};
    </script>
    <script src="/js/bootstrap.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
