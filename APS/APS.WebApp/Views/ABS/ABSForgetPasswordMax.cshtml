@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" type="image/x-icon" href="/img/base/favicon.ico">
    <title>Change Password | Trinity</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/glyphicons.css" rel="stylesheet">
    <link href="/css/open-iconic-bootstrap.css" rel="stylesheet">
    <link href="/css/change-password-style.css" rel="stylesheet">
    <link href="/css/custom-style.css" rel="stylesheet">
</head>
<body class="is-bg">
    <!-- Modal -->
    <div class="modal fade modal-notification" id="notificationModal" tabindex="-1" role="dialog" aria-labelledby="notificationModalLabel" aria-hidden="true">
        <div class="d-flex full-height">
            <div class="modal-dialog modal-md align-self-center" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="notificationModalLabel">Forget Password</h5>
                    </div>
                    <div class="modal-body">
                        <p>You have exceeded your number of tries to reset your password</p>
                        <p>Please contact your case officer for assistance</p>
                    </div>
                    <div class="modal-footer">
                        <a href="~/ABS/ABSLogin" class="btn btn-primary btn-block">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery-3.2.1.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/tether.js"></script>
    <script>
        window.Tether = {};
    </script>
    <script src="/js/bootstrap.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    <script type=text/javascript>
        $(document).ready(function () {
            $('#notificationModal').modal('show');
        });
    </script>

</body>
</html>


